{
    "name": "Django Celery Application",
    "description": "This app is created to show how to use Celery Monitoring tool on Heroku.",
    "keywords": [
      "celery",
      "django",
      "heroku"
    ],
    "website": "https://django-celery.herokuapp.com/",
    "repository": "https://github.com/inoks/django-celery",
    "env": {
      "DJANGO_SECRET_KEY": {
        "description": "A secret key for a particular Django installation.",
        "generator": "secret"
      },
      "WEB_CONCURRENCY": {
        "description": "The number of processes to run.",
        "value": "1"
      }
    },
    "formation": {
      "web": {
        "quantity": 1,
        "size": "free"
      }
    },
    "buildpacks": [
      {
        "url": "heroku/python"
      }
    ],
    "addons": [
        {
            "plan": "heroku-postgresql"
        },
        {
            "plan": "heroku-redis"
        }
    ]
  }